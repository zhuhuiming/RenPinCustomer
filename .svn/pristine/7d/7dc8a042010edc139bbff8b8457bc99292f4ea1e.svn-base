<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/shareinfo_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:text="@string/share_type" />
        </RelativeLayout>
        
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1e90ff"
        android:orientation="horizontal" >
    </LinearLayout>
<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="10dp">
     
    <Button
        android:id="@+id/shareinfo_smsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_grey0"
        android:text="@string/sms_share" 
         android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/shareinfo_qqbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_grey0"
        android:text="@string/qq_share" 
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/shareinfo_weixinbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_grey0"
        android:text="@string/weixin_share" 
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/shareinfo_weixinfriendbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_grey0"
        android:text="@string/weixinfriend_share"
        android:layout_marginTop="6dp" />
    </LinearLayout>
    
</LinearLayout>