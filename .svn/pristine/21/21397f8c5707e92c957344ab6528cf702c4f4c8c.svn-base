			// 去掉nRemainCount条数据
			for (int i = 0; i < nRemainCount; i++) {
				mHelpTaskData.remove(0);
			}
			// 将加载数据添加到容器中
			mHelpTaskData.addAll(nSize - nRemainCount, data);
			// 修改最新的任务id
			mnHelpTaskMaxNewIndex = Integer.parseInt(mHelpTaskData.get(0)
					.getmstrId());
		} else {// 如果数据没有超过最大值
				// 将加载数据添加到容器中
			mHelpTaskData.addAll(nSize, data);
		}
	}

