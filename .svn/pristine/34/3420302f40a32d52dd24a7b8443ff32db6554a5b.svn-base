<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/shareinfo_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/share_type" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/shareinfo_smsbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sms_share" />

    <Button
        android:id="@+id/shareinfo_qqbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qq_share" />

    <Button
        android:id="@+id/shareinfo_weixinbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weixin_share" />
    <Button
        android:id="@+id/shareinfo_weixinfriendbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weixinfriend_share" />

</LinearLayout>