			} else if (2 == nTaskFinishType || 3 == nTaskFinishType) {// 这个任务等待确认

				imageview10.setVisibility(View.GONE);

			} else if (2 == nTaskSelectType || 3 == nTaskSelectType) {// 这个任务正在执行

				imageview10.setVisibility(View.GONE);

			}
		}

